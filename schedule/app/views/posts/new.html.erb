<p class="pop_ng"><%= flash[:failure] %></p>

<p>スケジュール新規作成</p>

<%= form_for(@post) do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_at, "開始日" %></th>
      <td><%= f.date_field :start_at %></td>
    </tr>
    <tr>
      <th><%= f.label :end_at, "終了日" %></th>
      <td><%= f.date_field :end_at %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day, "終日" %></th>
      <td><%= f.check_box :all_day %><br>
          終日の場合はチェックを入れます
      </td>
    </tr>
    <tr>
      <th><%= f.label :memo, "スケジュールメモ" %></th>
      <td><%= f.text_field :memo %></td>
    </tr>
  </table>
  
  <div>
    <ul>
      <li><%= f.submit "スケジュールを新規登録する" %></li>
      <li><%= link_to 'スケジュール一覧に戻る', posts_path %></li>
    </ul>
  </div>
<% end %>
